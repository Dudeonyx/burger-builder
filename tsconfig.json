{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015.promise",
      "es6",
      "esnext"
    ],
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "isolatedModules": true
  },
  "include": [
    "src/"
  ]
}
